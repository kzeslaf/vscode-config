	// same ids are connected.
	"Shebang Py2": {
		"prefix": "sh",
		"body": [
			"#!/usr/bin/env python",
			"# -*- coding: utf-8 -*-",
			"",
			"$0"
		],
		"description": "Python 2 Shebang"
	},
	"Shebang Py3": {
